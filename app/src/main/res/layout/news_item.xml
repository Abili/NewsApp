<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_margin="@dimen/padding_margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:background="@android:color/holo_blue_dark"
            android:padding="@dimen/padding_margin_10"
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/section_textview"
            android:textSize="@dimen/textsize_18"
            tools:text="category" />
        <TextView
            android:layout_marginStart="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/section_textview"
            android:textSize="16sp"
            tools:text="Title" />

        <LinearLayout
            android:padding="4dp"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/section_textview"
                android:textSize="@dimen/date_text"
                tools:text="@string/date_place_holder" />

            <TextView
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:id="@+id/author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/section_textview"
                android:textSize="@dimen/date_text"
                tools:text="by Author" />

        </LinearLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>